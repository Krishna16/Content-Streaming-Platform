<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.moviestreamingnew.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_movies_fragment"
            app:destination="@id/movies_fragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_find"
            app:destination="@id/navigation_find" />
    </fragment>

    <fragment
        android:id="@+id/navigation_find"
        android:name="com.example.moviestreamingnew.ui.find.FindFragment"
        tools:layout="@layout/fragment_find" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.moviestreamingnew.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/movies_fragment"
        android:name="com.example.moviestreamingnew.ui.movie.MovieFragment"
        tools:layout="@layout/fragment_movie">
        <action
            android:id="@+id/action_movies_fragment_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_movies_fragment_to_navigation_find"
            app:destination="@id/navigation_find" />
    </fragment>

</navigation>